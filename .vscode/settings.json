{
  "[csv]": { "editor.formatOnSave": true, "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[json]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[markdown]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[python]": { "editor.defaultFormatter": "ms-python.black-formatter" },
  "black-formatter.args": ["--line-length=120"],
  "editor.codeActionsOnSave": { "source.organizeImports": true },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.detectIndentation": true,
  "editor.formatOnSave": true,
  "editor.insertSpaces": true,
  "editor.rulers": [120],
  "isort.args": ["--line-length=120", "--profile=black"],
  "mypy-type-checker.args": [
    "--disallow-incomplete-defs",
    "--disallow-untyped-calls",
    "--disallow-untyped-defs",
    "--ignore-missing-imports",
    "--ignore-no-untyped-def"
  ],
  "prettier.printWidth": 120,
  "pylint.path": ["pylint"],
  "pylint.args": ["--disable", "missing-function-docstring", "missing-module-docstring"]
}
